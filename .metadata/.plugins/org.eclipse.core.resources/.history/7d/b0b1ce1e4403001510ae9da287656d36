package static_problem;
/**
 * 构造函数和静态域，哪个先调用？
 * 答案是静态域先调用，这个例子具有迷惑性,把private static final TestStatic t = new TestStatic();删掉才能得出正确答案，
 * 因为这一行是静态变量所以在类加载的时候同样被先于构造函数调用了
 * @author admin
 *
 */
public class TestStatic {
//	private static final TestStatic t = new TestStatic();
	static{
		System.out.println("static");
	}
	public TestStatic(){
		System.out.println("构造函数");//1
	}
	public static void hello(){
		System.out.println("hello");//2
	}
	public static void main(String args[]){
//		new TestStatic();
		try {
			Class.forName("static_problem.TestStatic");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		System.out.println("hi");
	}
}
